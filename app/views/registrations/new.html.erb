<h1> New </h1>

<div class = "row">
  <div class = "col-xl-12">
      <%= form_for(@registration, :html => {class: "form-horizontal", role: "form", multipart: true}) do |f| %>
        <div class = "form-group row">
          <div class="control-label col-xl-2 col-form-label">
          <%= f.label :country, t(:'form.country').html_safe %>
        </div>
        <div class="col-xl-10">
          <%= f.country_select :country, include_blank: "country" %>
        </div>
        <div class="control-label col-xl-2 col-form-label">
            <%= f.label :address, t(:'form.address').html_safe %>
        </div>
        <div class="col-xl-10">
            <%= f.text_field :address, class: "form-control", placeholder: "Student's Name", autofocus: true %>
        </div>
        <div class="form-group">
          <div class="col-xl-2" >
            <%= f.submit  "Continue", class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      </div>
    <% end %>         
  </div>
</div>