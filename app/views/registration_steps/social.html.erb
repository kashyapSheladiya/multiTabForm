<h1>Welcome to Social Page.</h1>

<div class = "row">
  <div class = "col-xl-12">
      <%= form_for(current_registration, :html => {class: "form-horizontal", role: "form", multipart: true}, :url => wizard_path) do |f| %>
      <div class = "form-group row">
          <div class="control-label col-xl-2 col-form-label">
              <%= f.label :fb, t(:'form.fb').html_safe %>
          </div>
          <div class="col-xl-10">
              <%= f.text_field :fb, class: "form-control", placeholder: "Student's Name", autofocus: true %>
          </div>
          <div class="control-label col-xl-2 col-form-label">
              <%= f.label :twitter, t(:'form.twitter').html_safe %>
          </div>
          <div class="col-xl-10">
              <%= f.text_field :twitter, class: "form-control", placeholder: "Student's Name", autofocus: true %>
          </div>
          <div class="control-label col-xl-2 col-form-label">
              <%= f.label :Insta, t(:'form.insta').html_safe %>
          </div>
          <div class="col-xl-10">
              <%= f.text_field :Insta, class: "form-control", placeholder: "Student's Name", autofocus: true %>
          </div>
          
          
          <div class="form-group">
            <div class="col-xl-2" >
              <%= f.submit "Submit", class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
      </div>
    <% end %>         
  </div>
</div>