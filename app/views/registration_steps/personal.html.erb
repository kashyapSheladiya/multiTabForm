<h1>Welcome to Personal page</h1>

<div class = "row">
  <div class = "col-xl-12">
      <%= form_for(current_registration, :html => {class: "form-horizontal", role: "form", multipart: true}, :url => wizard_path) do |f| %>
        <div class = "form-group row">
            <div class="control-label col-xl-2 col-form-label">
                <%= f.label :name, t(:'form.name').html_safe %>
            </div>
            <div class="col-xl-10">
                <%= f.text_field :name, class: "form-control", placeholder: "Student's Name", autofocus: true %>
            </div>
            <div class="control-label col-xl-2 col-form-label">
                <%= f.label :dob, t(:'form.dob').html_safe %>
            </div>
            <div class="col-xl-10">
                <%= f.date_select :dob, start_year: 1985, end_year: 2020, order: [:year, :month, :day], prompt: true, class: "form-control", autofocus: true %>
            </div>
            <div class="control-label col-xl-2 col-form-label">
                <%= f.label :bio, t(:'form.bio').html_safe %>
            </div>
            <div class="col-xl-10">
            <%= f.text_field :bio, class: "form-control", autofocus: true %>
            </div>
            
            <div class="form-group">
              <div class="col-xl-2" >
                <%= f.submit  "Continue", class: 'btn btn-primary btn-lg' %> 
                # <%= link_to  "Next", next_wizard_path, class: 'btn btn-primary btn-lg' %>
              </div>
            </div>
        </div>
    <% end %>         
  </div>
</div>
